{
  "latex-citations.customPatterns": ["[@"],
  "python.defaultInterpreterPath": "./masterproject/code/.venv",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "notebook.formatOnSave.enabled": true,
  "files.exclude": {
    "**/__pycache__": true
  },
  "PandocCiter.DefaultBibs": ["./masterproject/text/content/bibliography.bib"],
  "[markdown]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    }
  }
}
